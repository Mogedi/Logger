<UserControl x:Class="Logger.LogInfoRowCreator"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Logger"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="630">
    <Grid>
        <Label x:Name="nameOfLogType" Content="Label" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="270" HorizontalContentAlignment="Center"/>
        <Label x:Name="numberOfExceptions" Content="Label" HorizontalAlignment="Left" Margin="280,10,0,0" VerticalAlignment="Top" Width="270" HorizontalContentAlignment="Center"/>
        <Button x:Name="logOpenButton" Content="View" HorizontalAlignment="Left" Margin="550,12,0,0" VerticalAlignment="Top" Width="75" Click="logOpenButton_Click"/>

    </Grid>
</UserControl>
